{{#extends "base"}}
  {{#block "content"}}

    <h1>Orders</h1>
    <table class="table">
      <tr>
        <th>Order ID</th>
        <th>Date/Time</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Address</th>
      </tr>
      {{#each orders}}
        <tr>
          <td>{{order_id}}</td>
          <td>{{date_time}}</td>
          <td>{{first_name}}</td>
          <td>{{last_name}}</td>
          <td>{{address}}</td>
          <td>{{email}}</td>
        </tr>
      {{/each}}
    </table>

  {{/block}}
{{/extends}}