{{#extends "base"}}
  {{#block "content"}}

    <h2>Orders</h2>
    <table class="table">
      <tr>
        <th>Order ID</th>
        <th>Date/Time</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Address</th>
      </tr>
      {{#each orders}}
        <tr>
          <td>{{order_id}}</td>
          <td>{{date_time}}</td>
          <td>{{first_name}}</td>
          <td>{{last_name}}</td>
          <td>{{address}}</td>
          <td>{{email}}</td>
        </tr>
      {{/each}}
    </table>
    <a href="/orders/create" class="btn btn-primary">Create Order</a>
    <a href="/order_details/create" class="btn btn-danger">Delete Order</a>
    <a href="/order_details/create" class="btn btn-success">Add Order Detail</a>

  {{/block}}
{{/extends}}